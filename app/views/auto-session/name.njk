{% extends "layout.html" %}
{% import '../macro/example.njk' as macro %}

{% block page_title %}
  GOV.UK prototype kit
{% endblock %}

{% block content %}

<main id="content" role="main">
  <div class="grid-row">
    <div class="column-two-thirds">
      {{ macro.backLink('/auto-session/starter') }}
      <h1 class="heading-xlarge">
      Tell us about you?
      </h1>
      <form method="post" action="/auto-session/name">
        <div class="form-group{% if error.firstName %} error{% endif %}">
          <label for="first-name" class="form-label-bold">First Name</label>
          {% if error.firstName %}<span class="error-message">{{ error.firstName }}</span> {% endif %}
          <input type="text" id="first-name" name="names[firstName]" class="form-control" value="{{ data.names.firstName }}" />
        </div>

        <div class="form-group{% if error.lastName %} error{% endif %}">
          <label for="last-name" class="form-label-bold">Last Name</label>
          {% if error.lastName %}<span class="error-message">{{ error.lastName }}</span> {% endif %}
          <input type="text" id="last-name" name="names[lastName]" class="form-control" value="{{ data.names.lastName }}" />
        </div>

        <button class="button">Submit</button>

      </form>


    </div>
  </div>
</main>

{% endblock %}
