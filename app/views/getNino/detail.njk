{% extends "layout.html" %}

{% block content %}

<main id="content" role="main">
  <div class="grid-row">
    <div class="column-two-thirds">
      <a href="/" class="link-back">back</a>
      <h1 class="heading-xlarge">
        {{name}}
      </h1>

      <table>
        <tbody>
          <tr>
            <td>Nino</td>
            <td>{{nino}}</td>
          </tr>
          <tr>
            <td>Name</td>
            <td>{{name}}</td>
          </tr>
          <tr>
            <td>Age</td>
            <td>{{age}} <a href="/leeds/update/{{nino}}/{{name}}/{{age}}">Update</a></td>
          </tr>
          <tr>
            <td>Hair colour</td>
            <td>Brown</td>
          </tr>
        </tbody>
      </table>
      <br />
      <form action="" method="POST">
        <div class="form-group">
          <label for="notes" class="form-label-bold">Notes:</label>
          <textarea name="notes" class="form-group" row="10">{{notes}}</textarea>
        </div>
        <button class="button">Save</button>
      </form>
    </div>
  </div>
</main>

{% endblock %}
